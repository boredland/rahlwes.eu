---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { getCurrentLocalizedPath, useTranslations, type Locale } from "../utils/i18n"

const t = useTranslations(Astro.currentLocale as Locale)

---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href={getRelativeLocaleUrl(Astro.currentLocale ?? "de")}>{"Home"}</a>
    </li>

    <li class="menu-item">
      <a href={getRelativeLocaleUrl(Astro.currentLocale ?? "de", "/museums")}>{t("museums.title")}</a>
    </li>

    <li class="menu-item">
      <a href={getRelativeLocaleUrl(Astro.currentLocale ?? "de", "/families")}>{t("families.title")}</a>
    </li>

    <li class="menu-item">
      <a href={getRelativeLocaleUrl(Astro.currentLocale ?? "de", "/team")}>{t("team.title")}</a>
    </li>

    {
      Astro.currentLocale !== 'en' && (
        <li>
          <a aria-label={"switch language to english"} href={getCurrentLocalizedPath(Astro.url, 'en')}>en</a>
        </li>
      )
    }
    {
      Astro.currentLocale !== 'de' && (
        <li>
          <a aria-label="Sprache zu Deutsch Ã¤ndern" href={getCurrentLocalizedPath(Astro.url, 'de')}>de</a>
        </li>
      )
    }
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        height: auto;
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
